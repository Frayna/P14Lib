{
	"include": ["src"],
	"exclude": [
	  "node_modules"
	],
	"compilerOptions": {
		"strict": true,
		"jsx": "react",
		"declaration": true,
		"esModuleInterop": true,
		"outDir": "dist",
		"target": "es6",
		"module": "es6",
		"moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
		"lib": ["es6", "dom"],
	  }
}